<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/color_white">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="服务查询"
            android:textColor="@color/color_333333"
            android:textSize="22sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/service" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kp_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/bank_list"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="我的卡片"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/zd_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_list"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="账单查询"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/huilv_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/huilv"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="国际汇率查询"
            android:textSize="18dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/licai_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:drawableTop="@mipmap/licai"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center"
        android:text="理财产品列表"
        android:textSize="18dp" />


</LinearLayout>
